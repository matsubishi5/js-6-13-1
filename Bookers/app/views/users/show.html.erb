<div class="container">
	<div class="row">
		<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
		<% end %>

		<div class="col-xs-3">
			<%= render 'template/template', template: @template, user: @user %>
		</div>
		<div class="col-xs-9">
			<h1>Books</h1>

			<div>
				<table class="table">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
						</tr>
					</thead>

					<tbody>
						<% @books.each do |book| %>
						<tr>
							<td>
								<%= link_to book.user do %>
								<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
								<% end %>
								<td><p><%= link_to book.title,book_path(book) %></p></td>
								<td><p><%= book.body %></p></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>