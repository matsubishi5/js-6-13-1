<h1>User info</h1>

<p><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg" %></p>

<table class="table">
	<tbody>
		<tr>
			<td>name</td>
			<td><%= user.name %></td>
		</tr>
		<tr>
			<td>introduction</td>
			<td><%= user.introduction %></td>
		</tr>
	</tbody>
</table>

<% if user.id == current_user.id %>
<%= link_to "", edit_user_path(current_user.id),class: "btn btn-default btn-block glyphicon glyphicon-wrench" %>
<% else %>
<%= link_to "", user_path(current_user.id),class: "btn btn-default btn-block glyphicon glyphicon-wrench" %>
<% end %>

<h1>New book</h1>

<% if template.errors.any? %>
<h2><%= template.errors.count %>error</h2>
<div>
	<ul>
		<% template.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>

<%= form_for(template) do |f| %>

<p>Title</p>
<p><%= f.text_field :title,class:"form-control" %></p>

<p>Opinion</p>
<p><%= f.text_area :body,class:"form-control" %></p>


<%= f.submit "Create Book",class:"btn btn-primary btn-block" %>

<% end %>